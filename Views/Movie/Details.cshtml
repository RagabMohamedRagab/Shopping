@model MovieFormViewModel;
@{
    ViewData["Title"] = Model.Title;
}
<section class="row mt-4">
    <div class="offset-md-2 col-md-3">
        <img src=@($"data:image/*;base64,{Convert.ToBase64String(Model.Poster)}") alt="@Model.Title" class="img-fluid img-thumbnail w-100 h-100" />
  </div>   
  <div class="col-md-4">
      <div class="mt-3">
          <h2 class="text-muted">@Model.Title</h2>
      </div>
      <div class="d-flex justify-content-between mt-3">
            <div>
                <span><i class="bi bi-film text-primary"></i> @Model.Year  </span>
                <span><i class="bi bi-boombox-fill text-primary"></i> @(Model.Genres.SingleOrDefault(b=>b.Id==Model.GenreId).Name)</span>
            </div>
            <div>
                <i class="bi bi-star-fill text-warning"></i>
                <small>@Model.Rate.ToString("0.0")</small>
            </div>
      </div>
      <div class="mt-4">
          <p class="lead text-muted">@Model.StoreLine</p>
      </div>
      <div class="mt-5">
          <input asp-for="Id" hidden />
            <button type="button"  class="btn btn-outline-primary add-to-cart"><i class="bi bi-cart-check-fill"></i> Add to Cart</button>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-danger"><i class="bi bi-backspace-fill"></i> Back</a>
      </div>
  </div>
</section>

